{

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=SHALABY\\SQL2019;Integrated Security=True;DataBase=RestaurantCleanArchDataBase;Encrypt=False"
  },

  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameWorkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
